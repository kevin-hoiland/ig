<% title "Home" %>
<% description "Welcome to Intl Gum! View as a guest or signup free to vote, rank, and comment on gum." %>
<%= currently_at 'Home' %>

<% content_for :sub_nav do %>
	<li><%= link_to("About", welcomes_about_path, :class => 'link_button') %></li>
 	<li><%= link_to("Contact", welcomes_contact_info_path, :class => 'link_button') %></li>
 	<li><%= link_to("FAQs", welcomes_faq_path, :class => 'link_button') %></li>
	<li><%= link_to("News", welcomes_news_path, :class => 'link_button') %></li>
<% end %>

<h1>Welcome To Intl Gum</h1>

<% @content_top.each do |c| %>
	<p class=<%= "size_#{c.size}" %>><%= c.content %></p>
<% end %>

<div id="slideshow">
	<%= image_tag("slide_concept.png", :title => "Welcome to Intl Gum", :size => "397x390") %>
	<% @content_slide.each do |c| %>
		<p class=<%= "size_#{c.size}" %>><%= c.content.html_safe %></p>
	<% end %>
	<%= image_tag("slide_rate.png", :title => "Welcome to Intl Gum", :size => "400x400") %>
	<%= image_tag("intl_gum_logo_large.jpg", :title => "Welcome to Intl Gum", :size => "400x400") %>
</div>
<!-- old way, static image without cycle
< %= image_tag("welcome.png", :title => "Welcome", :id => "welcome") %>
