<% title "Create New Rating for #{permalink_humanize(@gum.permalink)}" %>
<% description "Member's page for creating a new gum rating." %>
<%= currently_at 'Gums' %>

<% content_for :sub_nav do %>
	<% if user_signed_in? %>
		<li><%= link_to("List All Gums", gums_path, :class => 'link_button') %></li>
		<li><%= link_to "Gum Details", gum_path(@gum.permalink), :class => 'link_button' %></li>
		<li><%= link_to("View All Ratings", gum_ratings_path(@gum.permalink), :class => 'link_button') %></li>
	<% end %>
<% end %>

<h1>Create New Rating:</br><%=permalink_humanize(@gum.permalink) %></h1>
<%= render(:partial => 'shared/error_messages', :locals => {:object => @new_rating}) %>
<!--
< %= image_tag("gums/#{@gum.upc}.jpg", :alt=>"Image of #{permalink_humanize(@gum.permalink)}",:id => 'gum_image') %>
-->
<%= image_tag(@gum.image_url(:large).to_s, :alt=>"Image of #{permalink_humanize(@gum.permalink)}", :id => 'gum_image')%>

<%= semantic_form_for @new_rating do |r| %>
	<%= r.inputs do %>
		<%= render(:partial => "shared/ratings_form", :locals => {:r => r}) %>
	<% end %>
	<%= r.actions do %>
		<%= r.action :submit, :label => "Create Rating", :as => :button %>
		<%= r.action :cancel, :label => "Cancel", :as => :link %>
	<% end %>
 <% end %>

<!--
stat_1, stat_2, stat_3, comment
-->
<% @content_legal.each do |c| %>
	<p class=<%= "size_#{c.size}" %>><%= c.content %></p>
<% end %>